@page
@model ProyPage1.Pages.Profesores.EditarModel
@{
}

@section scripts{
   <partial name="_ValidationScriptsPartial" />
}
<form method="post">
    <h2>Modificar</h2> 
    <div class="form-group">
        <input type="text" asp-for="ProfesorEditar.Legajo" placeholder="Ingresar Legajo" />
        <span asp-validation-for="ProfesorEditar.Legajo"  class="badge badge-danger"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="ProfesorEditar.Nombre" placeholder="Ingresar Nombre" /> 
        <span asp-validation-for="ProfesorEditar.Nombre"  class="badge badge-danger"></span> 
    </div>
    <div class="form-group">
        <input type="text" asp-for="ProfesorEditar.Apellido" placeholder="Ingresar Apellido" />
        <span asp-validation-for="ProfesorEditar.Apellido"  class="badge badge-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="ProfesorEditar.EstudioTipo"  value="1" checked>
            <label class="form-check-label" for="exampleRadios1">
                Default radio
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="ProfesorEditar.EstudioTipo"  value="2">
            <label class="form-check-label" for="exampleRadios2">
                Second default radio
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="ProfesorEditar.EstudioTipo"  value="3" >
            <label class="form-check-label" for="exampleRadios3">
                Disabled radio
            </label>
        </div>
    </div>
    <div class="form-group">
        <input type="date" asp-for="ProfesorEditar.FechaNacimiento" placeholder="Ingresar Fecha" />
        <span asp-validation-for="ProfesorEditar.FechaNacimiento"  class="badge badge-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="ProfesorEditar.Activo"  />
            <label class="form-check-label" for="defaultCheck1">
                ¿Activo?
            </label>
        </div> 
    </div>
    <input type="submit" value="Guardar" />
    <a asp-page="Listado" class="btn"  onclick="return confirm('Are you sure you want to delete this?')" >Cancelar</a>
</form>
